{
    "compilerOptions": {
      "jsx": "react", // or "react-jsx" for React 17+
      "moduleResolution": "node",
      "allowJs": true,
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "baseUrl": "./",
      "paths": {
        "*": ["src/*"]
      },
      "module": "esnext",
      "target": "es5"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
  }
  